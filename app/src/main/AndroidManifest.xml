<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.sportcounter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/trophy"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".KickerActivity"
            android:label="@string/category_numbers"
            android:theme="@style/KickerTheme" />
        <activity
            android:name=".BasketballActivity"
            android:label="@string/category_family"
            android:theme="@style/BasketballTheme" />
        <activity
            android:name=".ChecklistActivity"
            android:label="@string/category_colors"
            android:theme="@style/ChecklistTheme" />
        <activity
            android:name=".AboutActivity"
            android:label="About"
            android:theme="@style/AboutTheme"/>

    </application>

</manifest>